<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Scale To 2x" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             ControlTemplate="{StaticResource AbstractShapes}"
             x:Class="AnimationsSample.ScaleTo2xPage">
    <Grid Padding="24,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Image Source="pancake" x:Name="image" VerticalOptions="Center" />

        <Button  Grid.Row="1" x:Name="StartAnimation" Text="Start/Stop" Clicked="StartStopAnimation_Clicked" VerticalOptions="Center" />
    </Grid>
</ContentPage>
